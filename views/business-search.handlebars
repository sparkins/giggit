    <script type='text/javascript'>
        console.log('BUSINESS-SEARCH: A business user will be directed to this page when they do a search by type. <br>' +
            'Unlike the user-search page, this page is strictly visual and a business user cannot click on a business to view their profile.' +
            'Business names and bio are displayed here for all businesses in the category selected from the search bar.')



        //route to show categories in drop down search menu
        $.ajax({
            url: '/businesscategory',
            method: 'GET'
        }).then(function (data) {
            var count = 0;


            //ALL BUSINESSES
            var $entireuserdiv;
            var $businessname;
            var $category;
            var $description;

            for (var i = 0; i < data.length; i++) {
                console.log(data[i].category_name);

                //info to display all the businesses
                console.log(data[i].business_name);

                $entireuserdiv = $("<div>");
                // $username = $("<div>");
                $businessname = $("<div>");
                $category = $("<div>");
                $description = $("<div>");
                // $email = $("<div>");

                $entireuserdiv.attr('class', 'entireUser');
                $businessname.attr('class', 'businessName');
                $businessname.text(data[i].business_name);

                $category.attr('class', 'jobTitle');
                $category.text(data[i].category_name);

                $description.attr('class', 'desc');
                $description.text(data[i].business_bio);

                $entireuserdiv.append($businessname, "<br>", $category, "<br>", $description);

                $("#content").append($entireuserdiv);

            }
        })

    </script>

